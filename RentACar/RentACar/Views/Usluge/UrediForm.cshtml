@model RentACar.Models.DodatneUsluge
@{
    Layout = "_Layout";
}

<h2>Dodaj</h2>

<h4>DodatneUsluge</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UrediSnimi" asp-controller="Usluge" method="post">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value="@Model.DodatneUslugeID" name="DodatneUslugeID"/>
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" value="@Model.Naziv"/>
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" value="@Model.Opis"/>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" value="@Model.Cijena" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Snimi</button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Usluge">Back to List</a>
</div>