@model RezervacijaDodajVM
@{
    Layout = "_LayoutSite";
}

<div class="" style="margin-top:100px">
    <div class="profile-content">
        <div class="container" id="PartialView">
            <div class="row">
                <div class="col-md-12 card">
                    <div class="card card-plain">
                        <div class="card-header card-header-info">
                            <h3 class="card-title mt-0"> Rezervacija</h3>


                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4 card" style="margin:10px;padding:10px; cursor:pointer">
                            <img style="width:100%" src="@Model.VoziloVM.Slika.URL" />
                        </div>
                        <div class="col-md-7">
                            <h2 style="text-align:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"> @Model.VoziloVM.Brend - @Model.VoziloVM.Naziv </h2>

                            <h4 style="text-align:center">Cijena na dan: @Model.VoziloVM.Cijena KM</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 style="text-align:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">@Model.VoziloVM.PoslovnicaLokacija - @Model.VoziloVM.PoslovnicaNaziv</h3>

                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="row" style="margin-top:50px">
                        <div class="col-md-12">
                            <div class="col-md-12">
                                <form asp-action="NapraviRezervaciju" asp-area="Klijent" asp-controller="Rezervacija" method="post">
                                    <input asp-for="Vozilo" hidden />
                                    @*<span asp-validation-for="Vozilo" style="font-size:20px" class="text-danger"></span>*@
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="DatumPreuzimanja" class="text-primary">Datum i vrijeme preuzimanja vozila</label>
                                            <input asp-for="DatumPreuzimanja" class="form-control" />
                                            <span asp-validation-for="DatumPreuzimanja" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">

                                            <label asp-for="DatumPovrata" class="text-primary">Datum i vrijeme povrata vozila</label>
                                            <input asp-for="DatumPovrata" class="form-control" />
                                            <span asp-validation-for="DatumPovrata"  class="text-danger"></span>
                                        </div>
                                    </div>
                                   
                                    @Html.AntiForgeryToken()
                                    <div class="col-md-12" style="text-align:center">
                                    <button rel="tooltip" data-placement="bottom" data-original-title="Next" style="margin:40px 10px 25px 0px" class="btn btn-default  btn-round btn-raised "  type="submit"> <i class="material-icons">navigate_next</i> </button>
                                    </div>
                                </form>
                            </div>
                           
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

