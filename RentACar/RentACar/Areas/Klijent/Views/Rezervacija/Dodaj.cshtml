@model RezervacijaDodajVM
@{
    Layout = "_LayoutSite";
}

<div class="main main-raised" style="margin-top:100px">
    <div class="profile-content">
        <div class="container" id="PartialView">
            <div class="row">
                <div class="col-md-12 card">
                    <div class="card card-plain">
                        <div class="card-header card-header-info">
                            <h3 class="card-title mt-0"> Rezervacija</h3>


                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4 card" style="margin:10px;padding:10px; cursor:pointer">
                            <img style="width:100%" src="@Model.VoziloVM.Slika.URL" />
                        </div>
                        <div class="col-md-7">
                            <h2 style="text-align:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif"> @Model.VoziloVM.Brend - @Model.VoziloVM.Naziv </h2>


                            <div class="row">
                                <div class="col-md-12">
                                    <h3 style="text-align:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">@Model.VoziloVM.PoslovnicaNaziv - @Model.VoziloVM.PoslovnicaNaziv</h3>

                                </div>

                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-8">
                                <form asp-action="DodatneUslugePV" asp-area="Klijent" asp-controller="Rezervacija" method="post">
                                <input asp-for="DatumPreuzimanja" name="Od" class="form-control" />
                                <input asp-for="DatumPovrata" type="date" name="Do" class="form-control" />
                                    <button type="submit">Next</button>
                                </form>
                            </div>
                            <div class="col-md-4">
                               @*@Html.ActionLink("DodatneUslugePV", "DodatneUslugePV", "Rezervacija", new { area = "Klijent" , id = Model.Vozilo.VoziloID})*@
                                   @*<button id="Next"> Next</button>*@
                            
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
