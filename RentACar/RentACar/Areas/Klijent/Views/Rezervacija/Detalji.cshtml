@model RezervacijaDetaljnoVM
@{
    ViewData["Title"] = "Detalji";
}

<style>
    .checked {
        color: orange;
    }
</style>

<div class="col-md-12">
    <div class="card card-plain">
        <div class="card-header card-header-info">
            <h3 class="card-title mt-0"> Rezervacija</h3>
            <h5 class="card-title mt-0">Datum: @Model.DatumRezervacije</h5>


        </div>

    </div>
    <div class="container-fluid">


    </div>
    <div class="row">

        <div class="col-md-12">
            <div class="card card-stats">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">store</i>
                    </div>
                    <h3 class="card-title" style="text-align:center">@Model.Poslovnica</h3>
                    <p class="card-category"></p>
                </div>
                <div class="card-body">
                    <div class="content">
                        <div class="container-fluid">

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card card-stats">
                                        <div class="card-header card-header-info card-header-icon">
                                            <div class="card-icon">
                                                <i class="material-icons">directions_car</i>
                                            </div>
                                            <h3 class="card-title" style="text-align:center">@Model.Vozilo</h3>
                                        </div>
                                        <div class="card-body" style="text-align:left">
                                            <img src="@Model.SlikaVozila.URL" width="100%" title="@Model.SlikaVozila.Name" alt="@Model.SlikaVozila.Name" />

                                        </div>
                                        <div class="card-footer">
                                            <div class="stats">
                                                <i class="material-icons">access_time</i> Datum rezervacije: @Model.DatumRezervacije

                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-4">
                                    <div class="card card-stats">
                                        <div class="card-header card-header-info card-header-icon">
                                            <div class="card-icon">
                                                <i class="material-icons">info</i>
                                            </div>
                                            <h3 class="card-title" style="text-align:center">Detalji rezervacije</h3>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table">

                                                    <tbody style="text-align:left">
                                                        <tr>
                                                            <th>
                                                                Brend Vozila
                                                            </th>
                                                            <td>
                                                                @Model.Brend
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                Vozilo
                                                            </th>
                                                            <td>
                                                                @Model.Vozilo
                                                            </td>

                                                        </tr>
                                                        <tr></tr>
                                                        <tr>
                                                            <th>
                                                                Datum preuzimanja vozila
                                                            </th>
                                                            <td>
                                                                @Model.DatumPreuzimanja
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                Datum povrata vozila
                                                            </th>
                                                            <td>
                                                                @Model.DatumPovrata
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <th>
                                                                Ukupno dana rentanja
                                                            </th>
                                                            <td>
                                                                @Model.BrojDanaIznajmljivanja
                                                            </td>

                                                        </tr>
                                                        <tr>
                                                            <th>Zakuljucen</th>
                                                            @if (Model.Zakljucen == (int)InfoRezervacija.Zavrsena)
                                                            {
                                                                <td>
                                                                    Završeno
                                                                </td>
                                                            }
                                                            else
                                                            {
                                                                <td>
                                                                    U toku
                                                                </td>
                                                            }
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="stats">
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-4">
                                    <div class="card card-stats">
                                        <div class="card-header card-header-warning card-header-icon">
                                            <div class="card-icon">
                                                <i class="material-icons">attach_money</i>
                                            </div>
                                            <h3 class="card-title" style="text-align:center">@Model.Ukupno KM</h3>
                                        </div>
                                        <div class="card-body" style="text-align:left">
                                            <p>
                                                Rezervisana usluga: @Model.Cijena KM
                                            </p>
                                            <p>
                                                Dodatne usluge: @Model.UkupnaCijenaUsluga KM
                                            </p>
                                        </div>
                                        <div class="card-footer">
                                            <div class="stats">
                                                <i class="material-icons">attach_money</i> Način plaćanja: @Model.NacinPlacanja
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card card-stats">
                                        <div class="card-header card-header-primary card-header-icon">
                                            <div class="card-icon">
                                                <i class="material-icons">add_shopping_cart</i>
                                            </div>
                                            <h3 class="card-title" style="text-align:center">Dodatne Usluge</h3>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead class="text-primary" style="text-align:left">
                                                        <tr>
                                                            <th>
                                                                Naziv
                                                            </th>
                                                            <th>
                                                                Opis
                                                            </th>
                                                            <th>
                                                                Kolicina
                                                            </th>
                                                            <th>
                                                                Cijena
                                                            </th>
                                                            <th>
                                                                Ukupno
                                                            </th>
                                                        </tr>

                                                    </thead>
                                                    <tbody style="text-align:left">
                                                        @foreach (var item in Model.dodatneUsluge)
                                                        {
                                                            <tr>
                                                                <th>
                                                                    @item.Naziv
                                                                </th>
                                                                <th>
                                                                    @item.Opis
                                                                </th>
                                                                <th>
                                                                    @item.Kolicina
                                                                </th>
                                                                <th>
                                                                    @item.Cijena
                                                                </th>
                                                                <th>
                                                                    @item.UkupnaCijenaUsluge
                                                                </th>

                                                            </tr>
                                                        }



                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="stats">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card card-stats">
                                        <div class="card-header card-header-primary card-header-icon">
                                            <div class="card-icon">
                                                <i class="material-icons">star</i>
                                            </div>
                                            <h3 class="card-title" style="text-align:center">Ocjena i komentar</h3>
                                        </div>
                                        <div id="OcjenaKomentar" class="card-body" style="text-align:center">
                                           
                                        </div>
                                        <div class="card-body" style="text-align:center">
                                           

                                            <div class="modal fade" id="loginModal" tabindex="-1">
                                                <div class="modal-dialog modal-login" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-body">
                                                            <div class="card">
                                                                <div class="card-header card-header-primary">
                                                                    <h4 class="card-title">Ocjena i komentar</h4>
                                                                </div>

                                                                <div class="card-body">

                                                                    <div class="row">
                                                                        <div class="col-md-12" style="text-align:center">
                                                                            <button id="btn1" class="btn btn-round">1<div class="ripple-container"></div></button>
                                                                            <button id="btn2" class="btn btn-round">2<div class="ripple-container"></div></button>
                                                                            <button id="btn3" class="btn btn-round">3<div class="ripple-container"></div></button>
                                                                            <button id="btn4" class="btn btn-round">4<div class="ripple-container"></div></button>
                                                                            <button id="btn5" class="btn btn-round">5<div class="ripple-container"></div></button>
                                                                        </div>
                                                                    </div>
                                                                    <br />
                                                                    <input id="Ocjena" style="visibility:hidden" name="Ocjena" type="number" />
                                                                    <div class="row">
                                                                        <div class="col-md-12">
                                                                            <div class="form-group bmd-form-group is-filled">
                                                                                <label class="">Komentar</label>
                                                                                <input id="Poruka" name="Poruka" class="form-control" type="text" />
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    @Html.AntiForgeryToken()
                                                                    <button id="DodajOcjenuBtn" class="btn btn-primary">Add<div class="ripple-container"></div></button>
                                                                    <div class="clearfix"></div>

                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="stats">
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="stats">
                        <i class="material-icons">pin_drop</i> Lokacija: @Model.Grad
                    </div>
                </div>
            </div>
        </div>



    </div>
</div>
<script>
    $(document).ready(function () {
        $.get("/Klijent/Rezervacija/OcjenaKomentar?id=@Model.RezervacijaID",
            function (rezultat, status) {
                $("#OcjenaKomentar").html(rezultat);

            });
    });
    $("#DodajOcjenuBtn").click(function () {
        var x1 = $("#Ocjena").val();
        var x2 = $("#Poruka").val();
        var x3 = $(this).find("input[name='__RequestVerificationToken']").val();
        $.post("/Klijent/Rezervacija/DodajOcjenuKomentar?RezervacijaID=@Model.RezervacijaID&&Ocjena=" + x1 + "&&Poruka=" + x2,
            function (rezultat, status) {
                $("#OcjenaKomentar").html(rezultat);
                $('#loginModal').modal('toggle');
            });
    

    });
    $("#btn1").click(function (e) {
        e.preventDefault();
        $("#btn1").addClass("btn-primary");
        $("#btn2").removeClass("btn-primary");
        $("#btn3").removeClass("btn-primary");
        $("#btn4").removeClass("btn-primary");
        $("#btn5").removeClass("btn-primary");
        changeOcjena(1)

    }); $("#btn2").click(function (e) {
        e.preventDefault();
        changeOcjena(2)
        $("#btn2").addClass("btn-primary");
        $("#btn1").removeClass("btn-primary");
        $("#btn3").removeClass("btn-primary");
        $("#btn4").removeClass("btn-primary");
        $("#btn5").removeClass("btn-primary");

    }); $("#btn3").click(function (e) {
        e.preventDefault();
        changeOcjena(3)
        $("#btn3").addClass("btn-primary");
        $("#btn2").removeClass("btn-primary");
        $("#btn1").removeClass("btn-primary");
        $("#btn4").removeClass("btn-primary");
        $("#btn5").removeClass("btn-primary");

    }); $("#btn4").click(function (e) {
        e.preventDefault();
        changeOcjena(4)
        $("#btn4").addClass("btn-primary");
        $("#btn2").removeClass("btn-primary");
        $("#btn3").removeClass("btn-primary");
        $("#btn1").removeClass("btn-primary");
        $("#btn5").removeClass("btn-primary");

    }); $("#btn5").click(function (e) {
        e.preventDefault();
        changeOcjena(5)
        $("#btn5").addClass("btn-primary");
        $("#btn2").removeClass("btn-primary");
        $("#btn3").removeClass("btn-primary");
        $("#btn4").removeClass("btn-primary");
        $("#btn1").removeClass("btn-primary");
    });

    function changeOcjena(i) {
        console.log(i);
        $("#Ocjena").val(i);
    }
</script>