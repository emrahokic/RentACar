@model PrikoliceDodajVM

@{
    Layout = "_LayoutSite";

}
@Json.Serialize(Model)
<div class="" style="margin-top:100px">
    <div class="profile-content">
        <div class="container" id="PartialView">
            <div class="row">
                <div class="col-md-12 card">
                    <div class="card card-plain">
                        <div class="card-header card-header-info">
                            <h3 class="card-title mt-0"> Prikolice</h3>
                        </div>

                    </div>
                    <div class="row">


                        <div class="col-md-12">

                            <form id="forma" asp-action="PrikoliceSpremi" asp-controller="Rezervacija" asp-area="Klijent" class="form">
                                <div class="row">

                                    <input id="selecting" asp-for="Selected" hidden />
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="">
                                                <tr>
                                                    <th>Tip prikolice</th>
                                                    <th>Duzina</th>
                                                    <th>Sirina</th>
                                                    <th>Zapremina</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int i = 0; i < Model.rows.Count; i++)
                                                {
                                                    <tr>
                                                        <th width="35%"> @Enum.GetName(typeof(TipPrikolice), Model.rows[i].TipPrikolice)</th>
                                                        <th width="20%"> @Model.rows[i].Duzina cm</th>
                                                        <th width="20%"> @Model.rows[i].Sirina cm</th>

                                                        <th width="20%"> @Model.rows[i].Zapremina m<span style="margin-top:-5px">&sup3</span> </th>
                                                        <th width="5%">

                                                            <div class="form-check" style="">

                                                                <label class="form-check-label">
                                                                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="@Model.rows[i].PrikolicaID">
                                                                    <span style="margin-top:-20px" class="circle">
                                                                        <span class="check"></span>
                                                                    </span>
                                                                </label>
                                                            </div>
                                                        </th>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-12" style="text-align:center">
                                        <button type="button" id="clear" class="pull-right btn btn-rose btn-raised btn-round">Ocisti</button>
                                    </div>
                                    <div class="col-md-12" style="text-align:center">
                                        <button rel="tooltip" data-placement="bottom" data-original-title="Next" style="margin:25px 0px 25px 0px" class="btn btn-default  btn-round btn-raised " type="submit"> <i class="material-icons">navigate_next</i> </button>
                                    </div>
                                </div>

                                @Html.AntiForgeryToken()
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script>
    $("#clear").click(function () {
        location.reload();
    });
    $('input[type=radio][name=exampleRadios]').change(function () {

        x = this.value;
        $("#selecting").val(x);
    });
</script>

