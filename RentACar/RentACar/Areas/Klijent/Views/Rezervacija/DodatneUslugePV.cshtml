@model DodatneUslugeDodajVM

@{
    Layout = "_LayoutSite";

}
@Json.Serialize(Model)
<div class="" style="margin-top:100px">
    <div class="profile-content">
        <div class="container" id="PartialView">
            <div class="row">
                <div class="col-md-12 card">
                    <div class="card card-plain">
                        <div class="card-header card-header-info">
                            <h3 class="card-title mt-0"> Dodatne Usluge</h3>
                            <button id="C">Click</button>
                        </div>

                    </div>
                    <div class="row">
                       

                        <div class="col-md-12">

                            <form asp-action="DodatneUslugeDodaj" asp-controller="Rezervacija" asp-area="Klijent" class="form">
                                <input asp-for="RezervacijaID" hidden />
                                @if (Model.Kuka)
                                {
                                    <div class="col-md-12">
                                        <div class="form-check" style="margin-left:20px">
                                            <label class="form-check-label" asp-for="DodajPrikolicu">
                                                <input class="form-check-input" asp-for="DodajPrikolicu" /> Prikolica
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>

                                    </div>
                                }
                                @for (int i = 0; i < Model.rows.Count; i++)
                                {
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <h3>@Model.rows[i].Naziv</h3>
                                            </div>
                                            <div class="col-md-3">
                                                <h3>@Model.rows[i].Opis</h3>

                                            </div>
                                            <input asp-for="rows[i].DodatnaUslugaID" hidden />
                                            <div class="col-md-3">
                                                <div class="form-check" style="margin-left:20px">
                                                    <label class="form-check-label" asp-for="rows[i].Selected">
                                                        <input class="form-check-input" asp-for="rows[i].Selected" />
                                                        <span class="form-check-sign">
                                                            <span class="check"></span>
                                                        </span>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <input asp-for="rows[i].Kolicina"/>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <button type="submit"></button>
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


