@model RezervacijaUslugeVM
@{
    ViewData["Title"] = "RezervacijaUsluge";
}

<div class="card card-nav-tabs" style="margin-top: 20px; padding: 20px;">
    <div class="card-header card-header-success">
        Dodaj uslugu rezervaciji
    </div>
    <form id="dodajUsluguRezervaciji" asp-action="RezervacijaUslugeSnimi">
        <div class="form-group">
            <input type="hidden" name="RezervacijaID" class="form-control" value="@Model.RezervacijaID" />
        </div>

        <div class="form-group">
            <label>Kolicina: </label>
            <input type="text" name="Kolicina" class="form-control" />
        </div>

        <div class="form-group">
            <label>Dodatne usluge: </label>
            <div>
                <select type="text" name="UslugaID" class="form-control">
                    <option value="0">Odaberi</option>
                    @foreach (var x in Model.usluge)
                    {
                        <option value="@x.Value"> @x.Text </option>
                    }
                </select>
            </div>
        </div>
        <button onclick="validiraj();" type="submit" class="btn btn-success"><i class="material-icons">save</i><span style="padding-left: 3px;">SNIMI</span></button>
    </form>
</div>
