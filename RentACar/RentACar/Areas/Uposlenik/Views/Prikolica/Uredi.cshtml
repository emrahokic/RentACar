@model PrikolicaUrediVM
@{
    ViewData["Title"] = "Uredi";
}


<div class="card card-nav-tabs" style="width: 45rem;">
    <div class="card-header card-header-success">
        Detalji o prikolici
    </div>
    <div class="col-md-10">
        <h3>Izmjena podataka za prikolicu</h3>
        <hr />
        <form id="formPrikolica" asp-area="Uposlenik" asp-action="UrediSnimi" asp-controller="Prikolica" method="post">

            <div class="form-group">
                <input type="hidden" value="@Model.PrikolicaID" name="PrikolicaID" />
            </div>

            <div class="form-group">
                <label class="control-label">Sirina: </label>
                <input name="Sirina" value="@Model.Sirina" class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label">Zapremina: </label>
                <input name="Zapremina" value="@Model.Zapremina" class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label">Duzina: </label>
                <input name="Duzina" value="@Model.Duzina" class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label">Cijena na dan: </label>
                <input name="Cijena" class="form-control" value="@Model.Duzina" />
            </div>

            <div class="form-group">
                <label>Tip prikolice: </label>
                <div>
                    <select type="text" name="TipPrikolice" class="form-control">
                        <option value="@Model.TrenutnoTipPrikolice">@Enum.GetName(typeof(TipPrikolice), Model.TrenutnoTipPrikolice)</option>
                        @foreach (var x in Model.TipPrikolice)
                        {
                            <option value="@x.Value"> @x.Text </option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="material-icons">save</i><span style="padding-left: 3px;">SNIMI</span></button>
            </div>

        </form>
    </div>
</div>

<div class="col-lg-12">
    <a asp-area="Uposlenik" asp-action="Index" asp-controller="Prikolica"><i class="material-icons">chevron_left</i><span style="padding-left: 3px;">Nazad na listu</span></a>
</div>

<script>
    document.getElementById("prikolice").className = "active";
</script>