@model PrikolicaUrediVM
@{
    ViewData["Title"] = "Uredi";
}


<div class="card card-nav-tabs" style="width: 45rem;">
    <div class="card-header card-header-success">
        Detalji o prikolici
    </div>
    <div class="col-md-10">
        <h3>Izmjena podataka za prikolicu</h3>
        <hr />
        <form asp-area="Uposlenik" asp-action="UrediSnimi" asp-controller="Prikolica" method="post">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value="@Model.PrikolicaID" name="PrikolicaID" />
            </div>
            <div class="form-group">
                <label asp-for="Sirina" class="control-label">Sirina: </label>
                <input asp-for="Sirina" class="form-control" value="@Model.Sirina" />
                <span asp-validation-for="Sirina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Zapremina" class="control-label">Zapremina: </label>
                <input asp-for="Zapremina" class="form-control" value="@Model.Zapremina" />
                <span asp-validation-for="Zapremina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duzina" class="control-label">Duzina: </label>
                <input asp-for="Duzina" class="form-control" value="@Model.Duzina" />
                <span asp-validation-for="Duzina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cijena" class="control-label">Cijena na dan: </label>
                <input asp-for="Cijena" class="form-control" value="@Model.Duzina" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Tip prikolice: </label>
                <div>
                    <select type="text" name="TipPrikolice" class="form-control">
                        @foreach (var x in Model.TipPrikolice)
                        {
                            <option value="@x.Value"> @x.Text </option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="material-icons">save</i><span style="padding-left: 3px;">SNIMI</span></button>
            </div>

        </form>
    </div>
</div>

<div class="col-lg-12">
    <a asp-area="Uposlenik" asp-action="Index" asp-controller="Prikolica"><i class="material-icons">chevron_left</i><span style="padding-left: 3px;">Nazad na listu</span></a>
</div>

<script>
    document.getElementById("prikolice").className = "active";
</script>