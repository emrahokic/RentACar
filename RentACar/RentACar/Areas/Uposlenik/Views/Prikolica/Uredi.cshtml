@model RentACar.Models.Prikolica
@{
    ViewData["Title"] = "Uredi";
}


<div class="row">
    
    <div class="col-md-4">
        <h3>Izmjena podataka za prikolicu</h3>
        <hr />
        <form asp-area="Uposlenik" asp-action="UrediSnimi" asp-controller="Prikolica" method="post">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" value="@Model.PrikolicaID" name="PrikolicaID" />
            </div>
            <div class="form-group">
                <label asp-for="Sirina" class="control-label"></label>
                <input asp-for="Sirina" class="form-control" value="@Model.Sirina" />
                <span asp-validation-for="Sirina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Zapremina" class="control-label"></label>
                <input asp-for="Zapremina" class="form-control" value="@Model.Zapremina" />
                <span asp-validation-for="Zapremina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Duzina" class="control-label"></label>
                <input asp-for="Duzina" class="form-control" value="@Model.Duzina" />
                <span asp-validation-for="Duzina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipPrikolice" class="control-label"></label>
                <input asp-for="TipPrikolice" class="form-control" value="@Model.TipPrikolice" />
                <span asp-validation-for="TipPrikolice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Snimi</button>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-area="Uposlenik" asp-action="Index" asp-controller="Prikolica">Back to List</a>
</div>

<script>
    document.getElementById("prikolice").className = "active";
</script>