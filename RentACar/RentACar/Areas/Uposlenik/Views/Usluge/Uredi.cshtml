@model DodatneUslugeVM

<div class="card card-nav-tabs" style="width: 45rem;">
    <div class="card-header card-header-success">
        Dodatna usluga izmjena 
    </div>
    <div class="col-lg-12">
        <form id="formUsluge" asp-area="Uposlenik" asp-action="UrediSnimi" asp-controller="Usluge" method="post">

            <div class="form-group">
                <input type="hidden" value="@Model.DodatnaUslugaID" name="DodatneUslugeID" />
            </div>

            <div class="form-group">
                <label class="control-label">Naziv</label>
                <input name="Naziv" value="@Model.Naziv" class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label">Opis</label>
                <input name="Opis" value="@Model.Opis" class="form-control"/>
            </div>

            <div class="form-group">
                <label class="control-label">Cijena</label>
                <input name="Cijena" value="@Model.Cijena" class="form-control"/>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success text-white"><i class="material-icons">save</i><span style="padding-left: 3px;">SNIMI</span></button>
            </div>

        </form>
    </div>
    </div>

    <div class="col-lg-12">
        <a asp-area="Uposlenik" asp-action="Index" asp-controller="Usluge"><i class="material-icons">chevron_left</i><span style="padding-left: 3px;">Nazad na listu</span></a>
    </div>
    <script>
    document.getElementById("usluge").className = "active";
    </script>
