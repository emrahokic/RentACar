@model DodatneUslugeIndexVM
@{
    ViewData["Title"] = "Index";
}

<h3>Usluge</h3>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Opis</th>
            <th>Cijena</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.rows)
        {
        <tr>
            <th>@x.Naziv</th>
            <th>@x.Opis</th>
            <th>@x.Cijena</th>
            <th>
                <a class="btn btn-danger" asp-area="Uposlenik" asp-action="Obrisi" asp-controller="Usluge" asp-route-id="@x.DodatneUslugeID" >Obrisi</a>
                <a class="btn btn-success" asp-area="Uposlenik" asp-action="UrediForm" asp-controller="Usluge" asp-route-id="@x.DodatneUslugeID">Uredi</a>
            </th>
        </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-area="Uposleik" asp-action="DodajForm" asp-controller="Usluge">Dodaj</a>
<script>
    document.getElementById("usluge").className = "active";
</script>

