@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="section section-signup page-header" style="background-image: url('https://demos.creative-tim.com/material-kit/assets/img/city.jpg');">

    <!-- End Navbar -->
    <!--main content-->

        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-5 col-md-7 ml-auto mr-auto" style="margin-top:50px">
                    <div class="card card-login">
                        <form class="form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                            <div class="card-header card-header-primary text-center">
                                <h4 class="card-title">Register</h4>

                            </div>
                            <div class="card-body">

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">mail</i>
                                            </span>

                                        </div>
                                        <input placeholder="Email" asp-for="Input.Email" class="form-control radiousStyle" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group" style=" margin-top:20px">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input placeholder="Password" asp-for="Input.Password" class="form-control radiousStyle" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group" style=" margin-top:20px">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input placeholder="Confirm password" asp-for="Input.ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary btn-block btn-lg"> Register</button>

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
