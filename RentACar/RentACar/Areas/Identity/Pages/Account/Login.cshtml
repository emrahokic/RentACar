<div class="section section-signup page-header" style="background-image: url('https://demos.creative-tim.com/material-kit/assets/img/city.jpg');">

    <div class="container">
        <div class="row">

            <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                <div class="card card-login">
                    <form class="form" method="post">
                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">Login</h4>

                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">mail</i>
                                        </span>

                                    </div>
                                    <input placeholder="Email" asp-for="Input.Email" class="form-control radiousStyle" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    <input placeholder="Password" asp-for="Input.Password" class="form-control radiousStyle" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-check" style="margin-left:20px">
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    <input class="form-check-input" asp-for="Input.RememberMe" /> @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </div>
                        <div class="card-body text-center">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary btn-block btn-lg"> Log in</button>

                            <p class="text-center">- or -</p>
                            <div class="form-group text-center">

                                <button class="btn btn-primary btn-block btn-lg" asp-page="./ForgotPassword">Forgot your password?</button>
                                <button asp-page="./Register" class="btn btn-primary btn-block btn-lg " asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</button>
                            </div>



                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

    

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
