@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="section section-signup page-header" style="background-image: url('https://demos.creative-tim.com/material-kit/assets/img/city.jpg');">

    <div class="container">
        <div class="row">

            <div class="col-lg-4 col-md-6 ml-auto mr-auto">
                <div class="card card-login">
                    <form class="form" method="post">

                        <div class="card-header card-header-primary text-center">
                            <h4 class="card-title">Login</h4>

                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">mail</i>
                                        </span>

                                    </div>
                                    <input placeholder="Email" asp-for="Input.Email" class="form-control radiousStyle" /><br />
                                </div>
                            </div>

                        </div>
                        <div class="card-footer">
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-primary btn-block btn-lg"> Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
